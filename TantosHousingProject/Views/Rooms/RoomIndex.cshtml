@model RoomIndexViewModel
@{
    ViewData["Title"] = "Room Index";
}

<a asp-action="CreateRoom">Create New Room</a>

<h1>Room List</h1>

<form asp-action="RoomIndex" method="post">
    <label asp-for="FilterText"></label>
    <input asp-for="FilterText" />
    <input type="submit" value="Filter By RoomType" />
</form>


<div class="row">
    <div class="col-12">

        <div class="row">
            <div class="col-4">
                <h5>Room Number</h5>
            </div>
            <div class="col-4">
                <h5>Room Type</h5>
            </div>
            <div class="col-4">
                <h5>Action</h5>
            </div>
        </div>

        @foreach (var item in Model.RoomList)
        {
            <div class="row">
                <div class="col-4">
                    <p>@item.RoomNumber</p>
                </div>
                <div class="col-4">
                    <p>@item.RoomType</p>
                </div>
                <div class="col-4">
                    <a  class="btn btn-info"  asp-action="DetailsRoom" asp-route-id="@item.Id">Details Room</a>
                </div>
            </div>
        }

    </div>
</div>




