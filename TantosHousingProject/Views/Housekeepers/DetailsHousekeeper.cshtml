    ViewData["Title"] = "Housekeeper Details";
}

<h1>Housekeeper Details</h1>

<dl>
    <dt>Housekeeper Name</dt>
    <dd>@Model.HousekeeperName</dd>
    <dt>Phone Number</dt>
    <dd>@Model.HousekeeperPhone</dd>
    <dt>Housekeeper Address</dt>
    <dd>@Model.HousekeeperAddress</dd>
